<div class="d-flex align-items-center justify-content-between mt-3">
  <div>
    <h1 class="h3 mb-1">Orders</h1>
    <div class="text-muted small">Danh sách đơn hàng cần admin xác nhận</div>
  </div>
</div>

<div class="card border-0 shadow-sm mt-3" style="border-radius:16px;">
  <div class="card-body">
    <%= form_with url: admin_orders_path, method: :get, local: true do %>
      <div class="row g-2 align-items-end">
        <div class="col-12 col-md-4">
          <label class="form-label">Kind</label>
          <%= select_tag :kind,
                options_for_select([["(all)", ""], ["auction_win", "auction_win"], ["buy_now", "buy_now"]], params[:kind]),
                class: "form-select",
                onchange: "this.form.requestSubmit()" %>
        </div>

        <div class="col-12 col-md-4">
          <label class="form-label">Status</label>
          <%= select_tag :status,
                options_for_select([["(all)", ""], ["pending", "pending"], ["paid", "paid"], ["cancelled", "cancelled"]], params[:status]),
                class: "form-select",
                onchange: "this.form.requestSubmit()" %>
        </div>

        <div class="col-12 col-md-4 d-flex gap-2">
          <%= link_to "Reset", admin_orders_path, class: "btn btn-outline-secondary rounded-pill w-100" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th style="width:90px;">#</th>
          <th>Listing</th>
          <th style="width:140px;">Kind</th>
          <th style="width:140px;">Status</th>
          <th style="width:160px;">Buyer marked paid</th>
          <th class="text-end" style="width:160px;">Price</th>
          <th class="text-end" style="width:120px;"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |o| %>
          <% status_badge =
            case o.status
            when "paid" then "bg-success"
            when "cancelled" then "bg-secondary"
            else "bg-warning text-dark"
            end
          %>

          <tr>
            <td class="fw-semibold">#<%= o.id %></td>

            <td>
              <div class="fw-semibold"><%= o.listing&.title %></div>
              <div class="text-muted small">
                Buyer: <%= o.buyer&.name %>
              </div>
            </td>

            <td><span class="badge text-bg-light border"><%= o.kind %></span></td>

            <td>
              <span class="badge <%= status_badge %>"><%= o.status %></span>
            </td>

            <td>
              <% if o.buyer_marked_paid? %>
                <span class="badge text-bg-primary">yes</span>
                <div class="text-muted small"><%= l(o.buyer_marked_paid_at, format: :short) rescue "" %></div>
              <% else %>
                <span class="badge text-bg-light border">no</span>
              <% end %>
            </td>

            <td class="text-end fw-semibold">
              <%= number_to_currency(o.price, unit: "₫", precision: 0) rescue o.price %>
            </td>

            <td class="text-end">
              <%= link_to "Xem", admin_order_path(o), class: "btn btn-sm btn-primary rounded-pill" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
