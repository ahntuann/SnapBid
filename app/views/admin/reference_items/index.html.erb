<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Quản lý Túi Mẫu (Reference Items)</h1>
  <%= link_to "Thêm túi mẫu mới", new_admin_reference_item_path, class: "btn btn-primary" %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Ảnh</th>
      <th>Tên túi</th>
      <th>Hãng</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <% if item.images.attached? %>
            <%= image_tag item.images.first, style: "height: 50px; width: auto;" %>
          <% else %>
            Không có ảnh
          <% end %>
        </td>
        <td><%= item.name %></td>
        <td><%= item.brand %></td>
        <td>
          <%= link_to "Sửa", edit_admin_reference_item_path(item), class: "btn btn-sm btn-warning" %>
          <%= link_to "Xoá", admin_reference_item_path(item), data: { turbo_method: :delete, turbo_confirm: "Chắc chưa?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>