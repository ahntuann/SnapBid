<div class="container" style="padding-top:84px; max-width: 520px;">
  <div class="text-center mb-3">
    <div class="d-inline-flex align-items-center gap-2 fw-semibold">
      <i class="bi bi-gem"></i> SnapBid
    </div>
  </div>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <% if flash[:notice].present? %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>

  <div class="card border-0 shadow-sm" style="border-radius:16px;">
    <div class="card-body p-4 p-md-5">
      <div class="mb-3">
        <div class="text-muted small">Admin Panel</div>
        <h1 class="h4 mb-0">Đăng nhập quản trị</h1>
      </div>

      <%= form_with url: admin_login_path, method: :post, local: true do %>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <%= email_field_tag :email, params[:email], class: "form-control", autocomplete: "email", required: true %>
        </div>

        <div class="mb-3">
          <label class="form-label">Mật khẩu</label>
          <%= password_field_tag :password, nil, class: "form-control", autocomplete: "current-password", required: true %>
        </div>

        <button class="btn btn-primary w-100">Đăng nhập</button>
      <% end %>

      <div class="text-muted small mt-3">
        Chỉ dành cho tài khoản có quyền admin.
      </div>
    </div>
  </div>
</div>
