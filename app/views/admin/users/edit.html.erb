<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
      <div class="text-muted small">Edit user #<%= @user.id %></div>
      <h1 class="h3 mb-0"><%= @user.name.presence || "(no name)" %></h1>
    </div>
    <%= link_to "Back", admin_user_path(@user), class: "btn btn-outline-secondary" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: [:admin, @user], local: true do |f| %>
        <div class="row g-3">
          <div class="col-12 col-lg-6">
            <%= f.label :name, "Tên", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="col-12 col-lg-6">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="col-12">
            <div class="form-check">
              <%= f.check_box :admin, class: "form-check-input" %>
              <%= f.label :admin, "Là admin", class: "form-check-label" %>
            </div>
            <div class="form-text">Cẩn thận khi cấp quyền admin.</div>
          </div>

          <div class="col-12 d-flex gap-2">
            <%= f.submit "Lưu", class: "btn btn-primary" %>
            <%= link_to "Hủy", admin_user_path(@user), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
