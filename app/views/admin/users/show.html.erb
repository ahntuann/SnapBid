<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
      <div class="text-muted small">User #<%= @user.id %></div>
      <h1 class="h3 mb-0"><%= @user.name.presence || "(no name)" %></h1>
      <div class="text-muted"><%= @user.email %></div>
    </div>
    <div class="d-flex gap-2">
      <%= link_to "Back", admin_users_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-12 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div class="fw-semibold">Thông tin</div>
            <% if @user.admin? %>
              <span class="badge bg-danger">admin</span>
            <% else %>
              <span class="badge bg-secondary">user</span>
            <% end %>
          </div>
          <hr>
          <div class="text-muted small">Created</div>
          <div class="fw-semibold"><%= @user.created_at.strftime("%d/%m/%Y %H:%M") %></div>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-7">
      <div class="card shadow-sm mb-3">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div class="fw-semibold">Recent listings</div>
            <div class="text-muted small"><%= @recent_listings.size %></div>
          </div>
          <hr class="my-2">
          <ul class="list-unstyled mb-0">
            <% @recent_listings.each do |l| %>
              <li class="py-2 border-bottom">
                <%= link_to l.title, admin_listing_path(l), class: "text-decoration-none fw-semibold" %>
                <div class="text-muted small">#<%= l.id %> • <%= l.created_at.strftime("%d/%m %H:%M") %></div>
              </li>
            <% end %>
            <% if @recent_listings.blank? %>
              <li class="text-muted">Chưa có listing.</li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div class="fw-semibold">Recent orders (buyer)</div>
            <div class="text-muted small"><%= @recent_orders.size %></div>
          </div>
          <hr class="my-2">
          <ul class="list-unstyled mb-0">
            <% @recent_orders.each do |o| %>
              <li class="py-2 border-bottom">
                <%= link_to "Order ##{o.id}", admin_order_path(o), class: "text-decoration-none fw-semibold" %>
                <span class="text-muted small">• <%= o.kind %> • <%= o.status %> • <%= o.price %></span>
              </li>
            <% end %>
            <% if @recent_orders.blank? %>
              <li class="text-muted">Chưa có order.</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
