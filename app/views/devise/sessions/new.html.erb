<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="text-center mb-4">
      <h2 class="fw-semibold">Welcome back!</h2>
      <div class="text-muted">Đăng nhập để tiếp tục</div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Password", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Ghi nhớ đăng nhập", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Log In", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center my-3 text-muted">or</div>

        <div class="d-grid">
          <%= button_to "Sign in with Google",
              user_google_oauth2_omniauth_authorize_path,
              method: :post,
              class: "btn btn-outline-secondary",
              data: { turbo: false } %>
        </div>

        <div class="text-center mt-3 small">
          Don’t have an account?
          <%= link_to "Sign up now", new_user_registration_path, class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
