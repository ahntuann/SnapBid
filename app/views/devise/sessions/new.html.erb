<%# ── Login Page — split-panel design ── %>
<div class="auth-page">

  <%# ── Left panel: branding ── %>
  <div class="auth-panel-left d-none d-lg-flex">
    <div class="auth-left-content">
      <%= image_tag "/icon.png", alt: "SnapBid", class: "auth-logo-img" %>
      <h1 class="auth-hero-title"><%= link_to "SnapBid", root_path, style: "color:inherit;text-decoration:none;" %></h1>
      <p class="auth-hero-sub">Sàn đấu giá thời trang cao cấp<br>dành cho những người tinh tế.</p>
      <div class="auth-left-features">
        <div class="auth-feature"><i class="bi bi-shield-check"></i> Bảo mật & an toàn</div>
        <div class="auth-feature"><i class="bi bi-lightning-charge"></i> Đấu giá thời gian thực</div>
        <div class="auth-feature"><i class="bi bi-robot"></i> Kiểm duyệt bằng AI</div>
      </div>
    </div>
  </div>

  <%# ── Right panel: form ── %>
  <div class="auth-panel-right">
    <div class="auth-form-wrap">

      <%# Mobile logo %>
      <div class="d-flex d-lg-none align-items-center gap-2 mb-5">
        <%= image_tag "/icon.png", alt: "SnapBid", style: "height:28px;width:28px;border-radius:6px;object-fit:contain;" %>
        <span class="fw-bold" style="font-size:15px;">SnapBid</span>
      </div>

      <h2 class="auth-form-title">Chào mừng trở lại</h2>
      <p class="auth-form-sub">Đăng nhập để tiếp tục mua sắm & đấu giá</p>

      <%# Google OAuth %>
      <%= button_to user_google_oauth2_omniauth_authorize_path,
            method: :post,
            class: "auth-google-btn",
            data: { turbo: false } do %>
        <svg width="18" height="18" viewBox="0 0 48 48" style="flex-shrink:0">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.18 1.48-4.97 2.36-8.16 2.36-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
          <path fill="none" d="M0 0h48v48H0z"/>
        </svg>
        Tiếp tục với Google
      <% end %>

      <div class="auth-divider"><span>hoặc</span></div>

      <%# Email/password form %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="auth-field">
          <%= f.label :email, "Email", class: "auth-label" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "auth-input",
                placeholder: "you@example.com" %>
        </div>

        <div class="auth-field">
          <%= f.label :password, "Mật khẩu", class: "auth-label" %>
          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "auth-input",
                placeholder: "••••••••" %>
          <%= link_to "Quên mật khẩu?", new_user_password_path, class: "auth-forgot d-block mt-1" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="auth-remember">
            <%= f.check_box :remember_me, class: "auth-check" %>
            <%= f.label :remember_me, "Ghi nhớ đăng nhập", class: "auth-check-label" %>
          </div>
        <% end %>

        <%= f.submit "Đăng nhập", class: "auth-submit-btn" %>
      <% end %>

      <p class="auth-switch">
        Chưa có tài khoản?
        <%= link_to "Đăng ký ngay", new_user_registration_path, class: "auth-switch-link" %>
      </p>

    </div>
  </div>
</div>
