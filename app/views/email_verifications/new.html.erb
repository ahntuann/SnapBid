<div class="container" style="padding-top: 92px; padding-bottom: 40px;">
  <div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5">
      <div class="text-center mb-4">
        <h1 class="h2 fw-bold mb-2">Xác minh email</h1>
        <div class="text-secondary">
          Hệ thống đã gửi mã OTP tới:
          <b><%= current_user.email %></b>
        </div>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <%= form_with url: email_verification_path, method: :post, local: true do %>
            <div class="mb-3">
              <label class="form-label">Mã OTP</label>
              <%= text_field_tag :code, params[:code],
                    class: "form-control",
                    placeholder: "Nhập mã OTP",
                    autocomplete: "one-time-code",
                    inputmode: "numeric" %>
            </div>

            <div class="d-grid gap-2">
              <%= submit_tag "Xác minh", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <div class="text-secondary small mb-2">Không nhận được mã?</div>
            <%= button_to "Gửi lại OTP", resend_email_verification_path,
                  method: :post,
                  form_class: "d-inline",
                  class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
