<div class="container" style="max-width: 1100px;">
  
  <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-4">
    <h1 class="fw-semibold fs-4 mb-0">Các sản phẩm đấu giá</h1>

    <form method="get" action="<%= root_path %>" class="d-flex gap-2 flex-wrap flex-grow-1 justify-content-md-end">
      <input type="text"
             name="q"
             value="<%= @q %>"
             placeholder="<%= t("home.search_placeholder") %>"
             class="form-control"
             style="max-width: 420px; min-width: 200px;" />

      <button type="submit" class="btn btn-primary">
        <i class="bi bi-search"></i>
      </button>
    </form>
  </div>

  <div class="card shadow-sm mb-4 home-filter-card bg-light border-0">
    <div class="card-body">
      <form method="get" action="<%= root_path %>" class="row g-2 align-items-end">
        <input type="hidden" name="q" value="<%= @q %>">

        <div class="col-12 col-md-3">
          <label class="form-label small text-muted mb-1"><%= t("home.filters.category") %></label>
          <select name="category_id" class="form-select form-select-sm">
            <option value=""><%= t("home.filters.all") %> - <%= t("home.filters.category") %></option>
            <% @categories.each do |cat| %>
              <option value="<%= cat.id %>" <%= "selected" if @category_id.to_s == cat.id.to_s %>><%= cat.name %></option>
            <% end %>
          </select>
        </div>

        <div class="col-12 col-md-3">
          <label class="form-label small text-muted mb-1"><%= t("home.filters.condition") %></label>
          <select name="condition" class="form-select form-select-sm">
            <option value=""><%= t("home.filters.all") %> - <%= t("home.filters.condition") %></option>
            <% @conditions.each do |c| %>
              <option value="<%= c %>" <%= "selected" if @condition == c %>><%= c %></option>
            <% end %>
          </select>
        </div>

        <div class="col-12 col-md-3">
          <label class="form-label small text-muted mb-1"><%= t("home.filters.sort") %></label>
          <select name="sort" class="form-select form-select-sm">
            <option value="newest" <%= "selected" if @sort == "newest" %>><%= t("home.filters.newest") %></option>
            <option value="price_asc" <%= "selected" if @sort == "price_asc" %>>Giá khởi điểm ↑</option>
            <option value="price_desc" <%= "selected" if @sort == "price_desc" %>>Giá khởi điểm ↓</option>
          </select>
        </div>

        <div class="col-12 col-md-3 d-flex gap-2">
          <button type="submit" class="btn btn-dark btn-sm flex-grow-1">Lọc</button>
          <a href="<%= root_path %>" class="btn btn-outline-secondary btn-sm flex-grow-1">Reset</a>
        </div>
      </form>

    </div>
  </div>

  <div class="row g-3">
    <% @listings.each do |listing| %>
      <%= render "listings/grid_card", listing: listing %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-5 mb-4">
    <%= paginate @listings %>
  </div>
</div>