<div style="display:flex;gap:18px;align-items:flex-start;">
  <div style="flex:1;">
    <h1 style="margin-top:0;"><%= @listing.title %></h1>

    <div style="opacity:.75;margin-bottom:10px;">
      <span><%= t("labels.listing.category") %>: <b><%= @listing.category %></b></span>
      &nbsp;•&nbsp;
      <span><%= t("labels.listing.condition") %>: <b><%= @listing.condition %></b></span>
    </div>

    <div style="margin:12px 0;">
      <div style="font-weight:700;margin-bottom:6px;"><%= t("ui.listing.start_price") %></div>
      <div style="font-size:18px;font-weight:800;">
        <% if @listing.start_price.present? %>
          <%= number_to_currency(@listing.start_price, unit: "₫", precision: 0) %>
        <% else %>
          <span style="opacity:.7;"><%= t("ui.price.tba") %></span>
        <% end %>
      </div>
    </div>

    <% unless user_signed_in? %>
      <div style="margin-top:14px;padding:12px;border:1px solid #ffe7a3;background:#fff7da;border-radius:12px;">
        <%= t("ui.guest.detail_note") %>
      </div>
    <% end %>

    <div style="margin-top:18px;">
      <%= link_to t("ui.actions.back_home"), root_path %>
    </div>
  </div>

  <div style="width:420px;">
    <div style="display:grid;grid-template-columns:repeat(2,1fr);gap:10px;">
      <% @listing.images.each do |img| %>
        <div style="border-radius:12px;overflow:hidden;aspect-ratio:1/1;background:#f5f5f5;">
          <%= image_tag img, style: "width:100%;height:100%;object-fit:cover;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
