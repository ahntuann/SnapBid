<h1>Thông báo</h1>

<p>
  <%= button_to "Đánh dấu tất cả đã đọc", mark_all_read_notifications_path, method: :post %>
</p>

<ul>
  <% @notifications.each do |n| %>
    <li style="padding:8px;border:1px solid #eee;border-radius:10px;margin-bottom:8px;<%= 'opacity:0.6' if n.read? %>">
      <div>
        <b><%= n.message %></b>
      </div>

      <div style="font-size:12px;">
        <%= l(n.created_at, format: :short) %>
        <% if n.url.present? %>
          - <%= link_to "Xem", n.url %>
        <% end %>
      </div>

      <% unless n.read? %>
        <div style="margin-top:6px;">
          <%= button_to "Đánh dấu đã đọc", mark_read_notification_path(n), method: :post %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
