<h1>Login (OTP)</h1>

<%= form_with url: otp_session_path do %>
  <div>
    <label>Email</label><br>
    <%= email_field_tag :email %>
  </div>

  <div>
    <label>Password</label><br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Send OTP" %>
<% end %>

<p>
  Or <%= link_to "Login with Google", user_google_oauth2_omniauth_authorize_path %>
</p>
<p>
  Or <%= link_to "Devise Login", new_user_session_path %>
</p>
