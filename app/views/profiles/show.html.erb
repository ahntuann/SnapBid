<div class="container" style="max-width: 900px;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1 class="h4 mb-1">Thông tin tài khoản</h1>
      <div class="text-muted">Email, tên hiển thị, ảnh đại diện</div>
    </div>
    <%= link_to "Chỉnh sửa", edit_profile_path, class: "btn btn-outline-primary btn-sm" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex gap-3 align-items-center">
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.variant(resize_to_fill: [96, 96]),
                class: "rounded-circle border",
                style: "width:96px;height:96px;object-fit:cover;" %>
        <% else %>
          <div class="rounded-circle bg-secondary-subtle d-flex align-items-center justify-content-center border"
               style="width:96px;height:96px;">
            <i class="bi bi-person fs-2"></i>
          </div>
        <% end %>

        <div class="flex-grow-1">
          <div class="text-muted small">Email</div>
          <div class="fw-semibold"><%= current_user.email %></div>

          <div class="mt-3 text-muted small">Tên hiển thị</div>
          <div class="fw-semibold"><%= current_user.name.presence || "(Chưa có)" %></div>
        </div>
      </div>
    </div>
  </div>
</div>
