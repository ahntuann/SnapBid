<%= form_with model: listing, url: url do |f| %>
  <div>
    <%= f.label :title, t("labels.listing.title") %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :category, t("labels.listing.category") %><br>
    <%= f.text_field :category %>
  </div>

  <div>
    <%= f.label :condition, t("labels.listing.condition") %><br>
    <%= f.text_field :condition %>
  </div>

  <div>
    <%= f.label :seller_note, t("labels.listing.seller_note") %><br>
    <%= f.text_area :seller_note, rows: 6 %>
  </div>

  <div>
    <%= f.label :images, t("labels.listing.images") %><br>
    <%= f.file_field :images, multiple: true %>
  </div>

  <%= f.submit submit_text %>
<% end %>
